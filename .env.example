# 环境配置
ENVIRONMENT=development  # development, paper, production

# 账户配置
INITIAL_BALANCE=10000

# Binance API
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

# OKX API
OKX_API_KEY=your_okx_api_key_here
OKX_API_SECRET=your_okx_api_secret_here
OKX_PASSWORD=your_okx_password_here

# Bybit API
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_API_SECRET=your_bybit_api_secret_here

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=quant_trading
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_postgres_password_here

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Telegram 通知
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email 通知
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_email_password_here
EMAIL_RECIPIENTS=recipient1@example.com,recipient2@example.com

# 监控
PROMETHEUS_PORT=8000

# 日志
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR

# ==================== 外部数据源API ====================

# Whale Alert API（鲸鱼交易监控）
# 免费注册: https://whale-alert.io/
# 免费额度: 10次/分钟
WHALE_ALERT_API_KEY=your_whale_alert_key_here

# CryptoPanic API（加密新闻聚合）
# 免费注册: https://cryptopanic.com/developers/api/
# 可以使用 "free" 作为默认key（有限制）
CRYPTOPANIC_API_KEY=free

# Twitter API（可选，推荐使用内置的Nitter方案）
# 官方API注册: https://developer.twitter.com/
# 注意：免费tier限制较多，建议使用Nitter（无需配置）
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
